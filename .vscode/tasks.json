{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tidy",
            "type": "shell",
            "command": "go mod tidy"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "go build -o ./cmd/main.exe main.go"
        },
        {
            "label": "run",
            "type": "shell",
            "dependsOn": [
                "tidy",
                "build",
            ],
            "command": "./cmd/main.exe"
        },
    ]
}